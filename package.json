{
    "name": "tally-tab",
    "version": "1.0.0",
    "description": "Tally tab",
    "scripts": {
        "start": "npm run test",
        "test": "npm run build:dev && webpack serve --mode development",
        "clean": "rm -rf www",
        "build:dev": "npm run link:dev && webpack --mode development",
        "build:prd": "npm run link:prd && webpack --mode production",
        "build:mobile": "npm run build:prd && npm run copy:post-build -- mobile",
        "lint": "eslint src/**/*.js",
        "link:dev": "cd js/json && ln -sf config.dev.json config.json && cd -",
        "link:prd": "cd js/json && ln -sf config.prd.json config.json && cd -",
        "inject:capacitor": "sed -i '' $'/<\\/body>/i\\\n  <script type=\\\"text/javascript\\\" src=\\\"js/capacitor.js\\\"></script>' www/index.html",
        "inject:post-sync": "./scripts/post-sync.sh",
        "copy:post-build": "./scripts/post-build.sh",
        "copy:capacitor": "cp node_modules/@capacitor/core/dist/capacitor.js js/",
        "cap:android": "npx cap add android",
        "cap:ios": "npx cap add ios",
        "cap:sync": "npx cap sync",
        "cap:assets": "npx @capacitor/assets generate",
        "cap:build_ios": "npm run build:mobile && npm run copy:capacitor && npm run inject:capacitor && npm run cap:assets && npm run cap:sync -- ios",
        "cap:build_android": "npm run build:mobile && npm run copy:capacitor && npm run inject:capacitor && npm run cap:assets && npm run cap:sync -- android",
        "cap:open_ios": "npx cap open ios",
        "cap:open_android": "npx cap open android",
        "release:android": "npm run cap:build_android && npm run inject:post-sync"
    },
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@capacitor/cli": "^7.4.2",
        "copy-webpack-plugin": "^13.0.0",
        "css-loader": "^7.1.2",
        "eslint": "^9.25.1",
        "eslint-plugin-jsdoc": "^50.6.11",
        "mini-css-extract-plugin": "^2.9.2",
        "style-loader": "^3.0.0",
        "webpack": "^5.99.6",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1"
    },
    "dependencies": {
        "@capacitor-community/admob": "^7.0.3",
        "@capacitor/android": "^7.4.2",
        "@capacitor/core": "^7.4.2",
        "@capacitor/ios": "^7.4.2",
        "@revenuecat/purchases-capacitor": "^11.1.0"
    }
}
